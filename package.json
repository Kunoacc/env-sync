{
  "name": "env-sync",
  "displayName": "EnvSync",
  "version": "0.0.1",
  "publisher": "kunoacc",
  "description": "Sync local .env files across projects securely via cloud storage with version history",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:envsync.login",
    "onCommand:envsync.sync",
    "workspaceContains:**/.env"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "envsync.login",
        "title": "EnvSync: Login"
      },
      {
        "command": "envsync.logout",
        "title": "EnvSync: Logout"
      },
      {
        "command": "envsync.sync",
        "title": "EnvSync: Sync .env Files"
      },
      {
        "command": "envsync.push",
        "title": "EnvSync: Push Current .env"
      },
      {
        "command": "envsync.pull",
        "title": "EnvSync: Pull Latest .env"
      }
    ],
    "configuration": {
      "title": "EnvSync",
      "properties": {
        "envsync.apiUrl": {
          "type": "string",
          "default": "",
          "description": "API URL for EnvSync backend (Supabase Functions URL)"
        },
        "envsync.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync .env files when changes are detected"
        },
        "envsync.filePatterns": {
          "type": "array",
          "default": [
            ".env",
            ".env.local",
            ".env.development"
          ],
          "description": "Patterns of environment files to sync"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "envsync",
          "title": "EnvSync",
          "icon": "$(sync)"
        }
      ]
    },
    "views": {
      "envsync": [
        {
          "id": "envsyncHistory",
          "name": "Sync History"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "envsync.refreshHistory",
          "when": "view == envsyncHistory",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "axios": "^1.8.4",
    "crypto-js": "^4.1.1",
    "date-fns": "^4.1.0",
    "node-machine-id": "^1.1.12"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^2.22.0",
    "ovsx": "^0.8.0",
    "ts-loader": "^9.5.4",
    "typescript": "^4.5.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "compile": "tsc --noEmit && npm run build",
    "lint": "echo 'No linter configured'",
    "test": "echo 'No tests configured'",
    "package": "vsce package",
    "publish": "vsce publish",
    "supabase:start": "cd supabase && supabase start",
    "supabase:stop": "cd supabase && supabase stop",
    "supabase:functions": "cd supabase && supabase functions serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunoacc/env-sync.git"
  },
  "keywords": [
    "env",
    "sync",
    "environment",
    "variables",
    "dotenv",
    "secrets"
  ],
  "author": "nelson@nelsonatuonwu.me",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunoacc/env-sync/issues"
  },
  "homepage": "https://github.com/kunoacc/env-sync#readme"
}
